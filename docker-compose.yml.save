
version: '3'

services:
  dash:
    container_name: ricedash
    image: ricedash
    build:
      context: ./ricedash/
      dockerfile: dockfile
    ports:
      - "11028:8000"
    volumes:
      - ./ricedash/ricedash_build:/ricedash_build
    command: gunicorn --bind 0.0.0.0:8000 --workers 4 --log-level debug index:server

  nginx:
    image: nginx:latest
    ports:
      - "11029:80"
    volumes:
      - ./nginx/nginx-setup.conf:/etc/nginx/conf.d/nginx-setup.conf
    depends_on:
      - dash
